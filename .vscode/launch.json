{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "JS current script",
            "type": "node",
            "program": "${file}",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "TS current script",
            "type": "node",
            "request": "launch",
            "program": "${file}",
            "runtimeArgs": [
                "-r",
                "ts-node/register",
            ],
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Test",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "test",
                "--serial"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Test current script",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "test",
                "--serial",
                "${file}"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}